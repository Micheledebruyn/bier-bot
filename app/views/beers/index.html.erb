<% @beers.each do |beer| %>
 <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
            <%# if beer.photo? %>
            <%#= cl_image_tag beer.photo.path, width: 200, height: 300, crop: :fill %>
            <%# end %>
              <!-- <img src="images/sample-1.jpg"> -->
              <span class="card-title"><%= beer.title %></span>
            </div>
            <div class="card-content">
              <p><%= beer.description %></p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      </div>
<% end %>
